<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/reg_bg"
    tools:context=".FilmDetailsActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".FilmDetailsActivity">

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/ypTrailer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="title"
                    android:fontFamily="@font/bold_font"/>

            </LinearLayout>

     <LinearLayout
         android:layout_width="210dp"
         android:orientation="vertical"
         android:background="@drawable/movie_bg"
         android:padding="5dp"
         android:layout_gravity="center"
         android:layout_marginStart="15dp"
         android:layout_marginEnd="15dp"
         android:layout_height="wrap_content">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <ImageView
              android:id="@+id/ivPoster"
              android:layout_width="150dp"
              android:layout_height="215dp"
              android:layout_marginStart="5dp"
              tools:srcCompat="@tools:sample/avatars" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="215dp"
    android:layout_toRightOf="@id/ivPoster"
    android:gravity="center"
    android:layout_marginStart="5dp"
    android:background="@drawable/etext_bg"
    android:orientation="vertical">
    <ToggleButton
        android:id="@+id/tbWatchlist"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00402F2F"
        android:textOn=""
        android:textOff=""
        android:drawableTop="@drawable/btn_heart"/>
    <ToggleButton
        android:id="@+id/tbMusic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00402F2F"
        android:textOn=""
        android:textOff=""
        android:drawableTop="@drawable/btn_play"/>

</LinearLayout>
      </RelativeLayout>
     </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

</LinearLayout>

            
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical">

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#5C91BD"
    android:background="@drawable/info_titlebg"
    android:padding="3dp"
    android:fontFamily="@font/bold_font"
    android:text="SYNOPSIS"/>
    <TextView
        android:id="@+id/tvSynopsis"
        android:padding="5dp"
        android:justificationMode="inter_word"
        android:fontFamily="@font/regular_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Synopsis" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/info_titlebg"
        android:padding="3dp"
        android:textColor="#5C91BD"
        android:fontFamily="@font/bold_font"
        android:text="GENRE"/>
    <TextView
        android:id="@+id/tvGenre"
        android:padding="5dp"
        android:fontFamily="@font/regular_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Genre" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/info_titlebg"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textColor="#5C91BD"
            android:fontFamily="@font/bold_font"
            android:text="RATED"/>
    <TextView
        android:id="@+id/tvRating"
        android:padding="5dp"
        android:fontFamily="@font/regular_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Rating" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/info_titlebg"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textColor="#5C91BD"
            android:fontFamily="@font/bold_font"
            android:text="RELEASE DATE"/>
    <TextView
        android:id="@+id/tvRelease"
        android:padding="5dp"
        android:fontFamily="@font/regular_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Release" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/info_titlebg"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textColor="#5C91BD"
            android:fontFamily="@font/bold_font"
            android:text="DIRECTOR"/>
    <TextView
        android:id="@+id/tvDirector"
        android:padding="5dp"
        android:fontFamily="@font/regular_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Director" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/info_titlebg"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textColor="#5C91BD"
            android:fontFamily="@font/bold_font"
            android:text="SCREEN WRITER"/>
    <TextView
        android:id="@+id/tvScreenwriters"
        android:padding="5dp"
        android:fontFamily="@font/regular_font"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Screenwriters" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/info_titlebg"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textColor="#5C91BD"
            android:fontFamily="@font/bold_font"
            android:text="PRODUCERS"/>
    <TextView
        android:id="@+id/tvProducers"
        android:padding="5dp"
        android:fontFamily="@font/regular_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Producers" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/info_titlebg"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textColor="#5C91BD"
            android:fontFamily="@font/bold_font"
            android:text="RUNTIME MINUTES"/>
    <TextView
        android:id="@+id/tvRuntimeMinutes"
        android:padding="5dp"
        android:fontFamily="@font/regular_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Runtime Minutes" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/info_titlebg"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textColor="#5C91BD"
            android:fontFamily="@font/bold_font"
            android:text="AWARDS"/>
    <TextView
        android:id="@+id/tvAwards"
        android:padding="5dp"
        android:justificationMode="inter_word"
        android:fontFamily="@font/regular_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Award/s" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/info_titlebg"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textColor="#5C91BD"
            android:fontFamily="@font/bold_font"
            android:text="MUSIC"/>
    <TextView
        android:id="@+id/tvMusic"
        android:padding="5dp"
        android:fontFamily="@font/regular_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Music" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/info_titlebg"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textColor="#5C91BD"
            android:fontFamily="@font/bold_font"
            android:text="REVIEW"/>
    <TextView
        android:id="@+id/tvRottenTomatoes"
        android:padding="5dp"
        android:fontFamily="@font/regular_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Review" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/info_titlebg"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textColor="#5C91BD"
            android:fontFamily="@font/bold_font"
            android:text="IMDB"/>
    <TextView
        android:id="@+id/tvImdb"
        android:padding="5dp"
        android:fontFamily="@font/regular_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Imdb" />
    </LinearLayout>

    </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REVIEWS"
                android:fontFamily="@font/movie_title"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp">
            </TextView>


            <TextView
                android:id="@+id/tvAppRating"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:fontFamily="@font/bold_font"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/profile_bg"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="App Rating" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReview"
                android:background="@drawable/all_bg"
                android:padding="15dp"
               android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/star_rev"
                android:background="@drawable/button_bg"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Add Review"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:fontFamily="@font/regular_font"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/star_rev"
                android:background="@drawable/button_bg"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone"
                android:text="Update Review" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:fontFamily="@font/regular_font"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="5dp"
                android:drawableLeft="@drawable/x_rev"
                android:background="@drawable/button_bg"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone"
                android:text="Delete Review" />
            </LinearLayout>

            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/b_button_bg"
                android:text="Back"
                android:fontFamily="@font/bold_font"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>